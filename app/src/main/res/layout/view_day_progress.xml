<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_day_progress_dim"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/day_progress_streak_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@color/circle_fill"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/day_progress_streak_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@color/circle_fill"
            android:visibility="invisible" />
    </LinearLayout>

    <com.github.OrangeGangsters.circularbarpager.library.CircularBar
        android:id="@+id/circularbar"
        android:layout_height="@dimen/view_day_progress_dim"
        android:layout_width="@dimen/view_day_progress_dim"
        android:layout_centerInParent="true"
        style="@style/CircularBarPagerStyle" />
</RelativeLayout>